<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/diary_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/diary_cardview_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test_diary"/>

            <TextView
                android:id="@+id/diary_cardview_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-10-12"/>

            <TextView
                android:id="@+id/diary_cardview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="진섭이랑 숭실대 축제"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>