<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/info_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5sp">

                <ImageView
                    android:id="@+id/info_cardview_imageview"
                    android:layout_width="140sp"
                    android:layout_height="190sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/test_jinsub" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:id="@+id/info_cardview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JinSub2"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/info_cardview_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="3sp"
                        android:layout_above="@+id/info_cardview_place"
                        android:text="2017/10/13 ~ 2017/10/14"
                        android:textColor="@color/colorText2" />

                    <TextView
                        android:id="@+id/info_cardview_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="3sp"
                        android:layout_above="@+id/info_cardview_fee"
                        android:text="용인"
                        android:textColor="@color/colorText2" />

                    <TextView
                        android:id="@+id/info_cardview_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="3sp"
                        android:text="500\"
                        android:layout_above="@+id/info_cardview_btn_heart"
                        android:textColor="@color/colorText2" />

                    <ImageView
                        android:id="@+id/info_cardview_btn_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:paddingTop="6dp"
                        android:paddingRight="3dp"
                        android:paddingLeft="7dp"
                        android:src="@drawable/ic_heart_empty"
                        android:tint="@color/colorAccent" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>